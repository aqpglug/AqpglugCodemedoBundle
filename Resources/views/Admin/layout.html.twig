{% extends 'AqpglugCodemedoBundle::layout.html.twig' %}

{% block title %}Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/aqpglugcodemedo/css/admin.css') }}" rel="stylesheet" type="text/css" media="all" />
{% endblock %}

{% block content %}
<div id="admin">

    {% block admin_menu %}
        <ul class="submenu menu">
        {% for type, label in get_labels %}
            <li><a href="{{ path('block_list', {'type': type }) }}" >{{ label|trans }}</a></li>
        {% endfor %}
        </ul>
    {% endblock admin_menu %}

    {% if app.session.hasFlash('error') %}
        <div id="flash_error" class="icontext warning">{{ app.session.flash('error') }}</div>
    {% endif %}
    {% if app.session.hasFlash('notice') %}
        <div id="flash_notice" class="icontext info">{{ app.session.flash('notice') }}</div>
    {% endif %}

    {% block admin %}
    {% endblock admin %}
</div>
{% endblock %}
