{% extends 'AqpglugCodemedoBundle:Admin:layout.html.twig' %}

{% block title %}Admin - {{ get_labels[type]}}{% endblock %}

{% block admin_menu %}{{ parent() }}
<ul class="submenu">
    <li><span>{{ get_labels[type]}}</span></li>
    <li><a href="{{ path('_admin_new', {'type': type}) }}" class="icontext plus" >{{ 'new'|trans }}</a></li>
    {% if pages > 1 %}
    <li>
        <ul class="right paginator">
        {% for i in range(1, pages) %}
            {% if i == page %}<li class="currentpage">{{i}}</li>{% else %}
            <li>
                <a href="{{ path('_admin_list', {'type': type, 'page': i }) }}" >{{i}}</a>
            </li>
            {% endif %}
        {% endfor %}
        </ul>
    </li>
    {% endif %}
</ul>
{% endblock %}

{% block admin %}
    {% if blocks %}
    <table class="list">
        <thead>
            <tr>
                {% trans %}
                <th>ID</th>
                <th>title</th>
                <th>slug</th>
                <th title="Published">published</th>
                <th title="Featured">featured</th>
                <th>created at</th>
                <th>actions</th>
                {% endtrans %}
            </tr>

        </thead>
    {% for block in blocks %}
        <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
            <td class="id">{{block.id}}</td>
            <td class="title"><a href="{{ path("_admin_edit", {'id': block.id}) }}">{{ block.title }}</a></td>
            <td class="slug">{{ block.slug }}</td>
            <td class="pub">
                <a href="{{ path("_admin_publish", {'id': block.id}) }}" >
                    <span class="icon {% if not block.published %}block{%else%}tick{% endif %}"></span>
                </a>
            </td>
            <td class="feat">
                <a href="{{ path("_admin_feature", {'id': block.id}) }}" >
                    <span class="icon {% if not block.featured %}block{%else%}tick{% endif %}"></span>
                </a>
            </td>
            <td class="date">{{block.created|date("Y/m/d h:m")}}</td>
            <td class="actions">
                <a class="remove" href="{{ path("_admin_remove", {'id': block.id}) }}"><span class="icon trash"></span></a>
            </td>
        </tr>
    {% endfor %}

    </table>

    {% endif %}
{% endblock %}

{% block javascripts %}
