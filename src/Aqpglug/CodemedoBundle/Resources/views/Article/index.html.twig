{% extends 'AqpglugCodemedoBundle::layout.html.twig' %}

{% import 'AqpglugCodemedoBundle:Macros:image.html.twig' as image %}
{% import 'AqpglugCodemedoBundle:Macros:nav.html.twig' as nav %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="all" href="{{ asset('/bundles/aqpglugcodemedo/css/article.css') }}" />
{% endblock %}

{% block title %}Art√≠culos{% endblock %}

{% block content %}
    {% if featured %}
<h2>Destacados</h2>
    <ul class="article_featured">
        {% for article in featured %}
        <li class="article">
            <a href="{{ path('_article_show', {'slug': article.slug} ) }}">
                <h3>{{ article.title }}</h3>
                <img src="{{ image.or_default(article.image, 'default_80.png') }}"
                     alt="{{ article.title }}" />
            </a>
        </li>
        {% endfor %}
    </ul>
    {% endif %}

    <ul class="article_list">
    {% for article in articles %}
        <li class="article">
            <a href="{{ path("_article_show", {'slug': article.slug}) }}">
                <img src="{{ image.or_default( article.image, 'default_80.png') }}"
                     alt="{{ article.title }}" />
            </a>
            <h3><a href="{{ path("_article_show", {'slug': article.slug}) }}">{{ article.title }}</a></h3>
            {% if article.metadata.resume is defined %}
                <span>{{ article.metadata.resume|raw }}</span>
            {% endif %}
        </li>
    {% endfor %}
    </ul>

    {{ nav.arrows('_article', page, pages) }}

{% endblock %}