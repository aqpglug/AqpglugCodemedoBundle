{% extends 'AqpglugCodemedoBundle:Admin:layout.html.twig' %}

{% block title %}Admin - {{ get_labels[type]}}{% endblock %}

{% block admin %}
    <h2>Admin - {{ get_labels[type]}}</h2>
    
    <a href="{{ path('_admin_new', {'type': type}) }}" class="new">Nuevo</a>
    
    <table id="blocks">
        <thead>
            <tr><th>ID</th>
                <th>Título</th>
                <th>Publicado</th>
                <th>Fecha</th>
            </tr>
            
        </thead>
    {% for block in blocks %}
        <tr>
            <td>{{block.id}}</td>
            <td><a href="{{ path("_admin_edit", {'id': block.id}) }}">{{ block.title }}</a></td>
            <td>{% if block.published %}Publicado {% else %}No publicado{% endif %}</td>
            <td>{{block.created|date("Y/m/d h:m")}}</td>
        </tr>
    {% else %}
        <tr><td>no hay nada para mostrar aquí</td></tr>
    {% endfor %}
        
    </table>
    <ul class="paginator">
        {% for i in range(1, pages) %}
            <li><a {% spaceless %}
                href="{{ path('_admin_list', {'type': type, 'page': i }) }}" 
                {% if i == page %}class="currentpage"{% endif %}>{{i}}
            {% endspaceless %}</a></li>
        {% endfor %}
    </ul>
{% endblock %}